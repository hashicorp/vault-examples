<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/vault-tomcat-app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/vault-tomcat-app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Vault Secret Change Logger -->
    <appender name="VAULT_SECRET" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/vault-secret-changes.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/vault-secret-changes.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Database Logger -->
    <appender name="DATABASE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/database-operations.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/database-operations.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Token Renewal Logger -->
    <appender name="TOKEN_RENEWAL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/token-renewal.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/token-renewal.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for Vault Secret Service -->
    <logger name="com.example.vaulttomcat.service.VaultSecretService" level="DEBUG" additivity="false">
        <appender-ref ref="VAULT_SECRET"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for Database Service -->
    <logger name="com.example.vaulttomcat.service.DatabaseService" level="DEBUG" additivity="false">
        <appender-ref ref="DATABASE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for Database Config -->
    <logger name="com.example.vaulttomcat.config.DatabaseConfig" level="INFO" additivity="false">
        <appender-ref ref="DATABASE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for Vault Client -->
    <logger name="com.example.vaulttomcat.client.VaultClient" level="INFO" additivity="false">
        <appender-ref ref="VAULT_SECRET"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for Token Renewal Scheduler -->
    <logger name="com.example.vaulttomcat.config.TokenRenewalScheduler" level="DEBUG" additivity="false">
        <appender-ref ref="TOKEN_RENEWAL"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Logger for Tomcat -->
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.coyote" level="WARN"/>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
